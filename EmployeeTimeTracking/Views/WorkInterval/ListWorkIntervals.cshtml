@using EmployeeTimeTracking.Models.Constants
@model (List<WorkIntervalResponseModel> Intervals, double TotalHours, int EmployeeId)
<div class="container">
    <main role="main" class="pb-3">
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Pridhod</th>
            <th>Odhod</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Intervals.Count; i++)
        {
            var interval = Model.Intervals[i];
            <tr>
                <td>@interval.Id</td>
                <td>
                    @if (interval.Start != DateConstants.MinDate && interval.Start != DateConstants.SpecialDate)
                    {
                        @interval.Start
                    }
                    else
                    {
                        <a class="btn btn-success" href="@Url.Action("Start", "WorkInterval", new { employeeId = Model.EmployeeId, id = interval.Id })">Prichod</a>
                    }
                </td>
                <td>
                    @if (interval.End != DateConstants.MinDate && interval.End != DateConstants.SpecialDate)
                    {
                        @interval.End
                    }
                    else
                    {
                        <a class="btn btn-danger" href="@Url.Action("End", "WorkInterval", new { employeeId = Model.EmployeeId, id = interval.Id })">Odhod</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <strong>Total Hours:</strong> @Model.TotalHours.ToString("F2")
</div>
</main>
</div>